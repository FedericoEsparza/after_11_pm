<h3> Main UI </h3>

<form action="/generate_paper", method="post">
  <div class="form-group">
    <label for="numberOfSingleVarQuestions">Number of questions</label>
    <input type="text" class="form-control" id="numberOfSingleVarQuestions" name="options[single_var_qs][]">
  </div>
  <div class="form-group">
    <label for="variable">Variables</label>
    <input type="text" class="form-control" id="variable" name="options[single_var_qs][][variable]">
  </div>
  <div class="form-group">
    <label for="numberOfSteps">Number of steps</label>
    <input type="text" class="form-control" id="numberOfSteps" name="options[single_var_qs][][number_of_steps]">
  </div>
  <div class="form-group">
    <label for="solutionMax">Solution Max</label>
    <input type="text" class="form-control" id="solutionMax" name="options[single_var_qs][][solution_max]">
  </div>
  <div class="checkbox">
    <label for="negativeValues">
      <input type="checkbox" id="negativeValue" name="options[single_var_qs][][negative_value]" value="true"> Allow Negative Values
    </label>
  </div>
  <div class="checkbox">
    <label for="multipleDivision">
      <input type="checkbox" id="multipleDivision" name="options[single_var_qs][][multiple_division]" value="true"> Allow Multiple Division
    </label>
  </div>
  <button type="submit" class="btn btn-default">Submit</button>
</form>
